<div class="updateitem" style="background: #e9efe3 url('/images/checkin_updatebg.gif') center bottom repeat-x;">

	<table id="update_content_table">
		<tr>
			<td width="40"><div style="width:48px;height:48px;">
				<img src="/images/noavatar48.gif" />
			</div></td>
			<td style="padding-left:5px;font-size:1.1em;">
				<div><strong>TickrTalk</strong> <a href="/users/<%= h @checkin.user.username %>" target="_blank" style="color:#000000;text-decoration:none;">
					
				<% if @checkin_status == "new" %>	
					<%= h @checkin.user.username %></a> has checked in!
				<% else %>
					<%= h @checkin.user.username %></a> has checked back in.
				<% end %>
				
				</div><div></div>
				<div style="font-size:0.8em;color:#555555;"><span class="timeago"><%= time_ago_in_words(@checkin.updated_at) %> ago</span>
				</div>
				
				<script type="text/javascript">
				jQuery.timeago(jQuery("#update-<%= @checkin.id %>"));
				</script>
			</td>
		</tr>
	</table>

</div>
