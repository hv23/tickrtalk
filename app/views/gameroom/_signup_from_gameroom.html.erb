<div id="gameroom_signup" class="constraint" style="padding-left:20px;padding-right:20px;margin-top:30px;width:700px;">
  <h2 style="margin-bottom:0;font-size:30px;"><strong>Sign up for TickrTalk</strong></h2>

  <div id="signup_header" style="font-size:14px;">
  	Make a free TickrTalk profile to join the conversation.
  </div>

  <div id="gameroom_social_login" style="padding-bottom:20px;">
    <p class="dotted" style="font-size:18px;">Get started with TickrTalk through Twitter or Facebook:</p>
    
    <% unless (current_user && current_user.twitter_authorized?) || session[:twitter_name] %>
  			<%- form_tag session_path, :style => "display:inline;padding:0;margin:0;" do -%>
  		    	<%= image_submit_tag 'signin_twitter_default.png', :class => "welcome_twitter_button", :onmouseover => "this.src='/images/signin_twitter_hover.png'", :onmouseout => "this.src='/images/signin_twitter_press.png'" %>
  		  	<%- end -%>
  		 <% end %>
  		
  		<% unless (current_user && !current_user.facebook_authorized?) || session[:facebook_name] %>						
				<%- form_tag facebook_session_path, :style => "display:inline;padding:0;margin:0;" do -%>
				  <%= image_submit_tag 'signin_facebook_default.png', :class => "welcome_facebook_button", :onmouseover => "this.src='/images/signin_facebook_hover.png'", :onmouseout => "this.src='/images/signin_facebook_press.png'" %>
				<% end -%>
			<% end %>
  </div>

  <div id="gameroom_user_signup">
    <p class="dotted" style="font-size:18px;">Or just quickly fill out this form:</p>
    
    <% form_for :user, :url => {:controller => "users", :action => "create"} do |f| %>  
    	<%= message_block :on => [:user] %>

    	<label class="large_label">
    		Username
    	</label>
    	<%= f.text_field :username, :class => "large_field" %>
	
    	<label class="large_label">
    		Password
    	</label>
    	<%= f.password_field :password, :class => "large_field" %>			

    	<label class="large_label">
    		Password Confirmation
    	</label>
    	<%= f.password_field :password_confirmation, :class => "large_field" %>

    	<label class="large_label">
    		Email (private. no spam.)
    	</label>
    	<%= f.text_field :email, :class => "large_field" %>
    	<br />

    	<%= f.submit "Sign up!", :class => "large_submit" %>
    <% end %>
    
    <p style="margin-top:20px;">Already a user? <%= link_to "Login", login_path %>.</p>
  </div>
  
</div>